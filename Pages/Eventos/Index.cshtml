            </th>
            <th>
                @Html.DisplayNameFor(model => model.Evento[0].Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Evento[0].Dj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Evento[0].Pago)
            </th>
